[Unit]
Description=Mentor Chip Bot (Luca)
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/fractal-mind/proyectos/mentor-chip-bot
ExecStart=/home/ubuntu/.local/share/mamba/envs/mentor-env/bin/python3.11 main.py
Restart=always
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=bot-mentor

[Install]
WantedBy=multi-user.target
